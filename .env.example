# Frontend (for Vercel): optional external API origin
# Example: https://your-api.onrender.com
VITE_API_BASE_URL=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your-google-app-password
EMAIL_FROM=جمعية بداية <your@gmail.com>
ADMIN_EMAIL=your-admin@email.com

# CORS: comma-separated list of allowed frontend origins
# Supports wildcard suffix via *.vercel.app
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com,https://your-project.vercel.app,*.vercel.app

# Supabase (server)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# Employee Management
PRESIDENT_EMAIL=your@gmail.com
HEAD_EMAIL=your@gmail.com
HEAD_KEY=your-secret-head-key

# Server
PORT=5000
NODE_ENV=development
